<div class="page-header">
  <h1 align="center"><%= @championship.name %></h1>
</div>
<div class="navbar-inner">
  <br>
  <% if @championship.rule_id == 3  %>
    <%= render :partial => 'games', :locals => {:championship => @championship, :games => @games} %> 
  <% else %>
    <div class="span7">
        <%= render :partial => 'ranking', :locals => {:ranking => @ranking} %>
    </div>
    <div class="span4">
      <%= render :partial => 'games', :locals => {:championship => @championship, :games => @games} %> 
      <center>
        <% if @championship.rule_id != 3 && params[:phase] != '2' %>
            <%= will_paginate @games %>
        <% end %>
        <% if @championship.rule_id == 1 %>
          <div class="pagination">
            <ul>
              <li><%= link_to "Classificação" %></li>
              <li><%= link_to "Eliminatórias", :phase => "2" %></li>
            </ul>
          </div>
          <% end %>
      </center>
    </div>

  <% end %>
</div>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
                  championships_path, :class => 'btn' %>
  </div>
  
