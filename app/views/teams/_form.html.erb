<%= simple_form_for [@championship, @team], :html => { :class => 'form-horizontal' } do |f| %>
	
	  <%= f.input :name %>
	  <%= f.input :logo, collection: @logos, prompt: "Select your logo" %>
	  <%= f.input :abbreviation %>
	  <div class="form-actions">
	    <%= f.button :submit, :class => 'btn-primary' %>
	    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
	                championship_teams_path(@championship), :class => 'btn' %>
	  </div>
 
<% end %>
