<%= simple_form_for @championship, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :rule_id, collection: Rule.all, prompt: "Select your rule" %>
  <%= f.input :classification %>
  <%= f.input :groups %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                championships_path, :class => 'btn' %>
  </div>
<% end %>
