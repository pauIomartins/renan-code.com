<%= simple_form_for @championship, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :name %>
  <%= f.input :rule_id, collection: Rule.all, prompt: "Select your rule" %>
  <%= f.input :date_start %>
  <div class="form-actions">
    <%= link_to t('.back', :default => t("helpers.links.back")),
                championships_path, :class => 'btn' %>
    <%= f.button :submit, :class => 'btn-primary' %>
  </div>
<% end %>