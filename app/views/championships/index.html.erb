<%- model_class = Championship -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:rule_id) %></th>
      <th><%= model_class.human_attribute_name(:date_start) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @championships.each do |championship| %>
      <tr>
        <td><%= championship.name %></td>
        <td><%= championship.rule.name unless championship.rule.nil? %></td>
        <td><%= championship.date_start.strftime("%d/%m/%Y") unless championship.date_start.nil? %></td>
        <td>
          <%= link_to t('.dashboard', :default => t("helpers.links.dashboard")), championship_dashboard_path(championship), :class => 'btn btn-mini' %>
          <%= link_to t('.show', :default => t("helpers.links.show")), championship_path(championship), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_championship_path(championship), :class => 'btn btn-mini' %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), championship_path(championship), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @games %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_championship_path,
            :class => 'btn btn-primary' %>
