<%= simple_form_for [@championship, @game], :html => { :class => 'form-horizontal' } do |f| %>
    <%= f.input :team1_id, collection: @championship.teams, prompt: "Select your team 1" %>
    <%= f.input :team2_id, collection: @championship.teams, prompt: "Select your team 2" %>
    <%= f.input :phase_id, collection: Phase.all, prompt: "Select your phase" %>
    <%= f.input :stage %>
    <%= f.input :groups %>
    <%= f.input :duel1 %>
    <%= f.input :duel2 %>
    <div class="form-actions">
      <%= f.button :submit, :class => 'btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  championship_games_path(@championship), :class => 'btn' %>
    </div>
<% end %>
